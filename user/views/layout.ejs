<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Maraneea Shop - Baju Muslimah, Hampers & Kue Terbaik' %></title>
    <meta name="description" content="<%= description || 'Toko online terpercaya untuk baju muslimah, hampers, aneka kue, dan produk Ramadhan & Lebaran. Kualitas terbaik dengan harga terjangkau.' %>">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Additional CSS -->
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(css => { %>
            <link href="<%= css %>" rel="stylesheet">
        <% }); %>
    <% } %>
</head>
<body class="bg-gray-50">
    <!-- Header -->
    <header class="header sticky top-0 z-50">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-yellow-400 to-amber-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-shopping-bag text-white text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold text-white">Maraneea Shop</h1>
                        <p class="text-xs text-yellow-200">Baju Muslimah & Hampers</p>
                    </div>
                </div>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="nav-link <%= (currentPage === 'home') ? 'active' : '' %>">
                        <i class="fas fa-home mr-1"></i>Beranda
                    </a>
                    <a href="/products?category=baju-muslimah" class="nav-link <%= (currentPage === 'baju-muslimah') ? 'active' : '' %>">
                        <i class="fas fa-tshirt mr-1"></i>Baju Muslimah
                    </a>
                    <a href="/products?category=hampers" class="nav-link <%= (currentPage === 'hampers') ? 'active' : '' %>">
                        <i class="fas fa-gift mr-1"></i>Hampers
                    </a>
                    <a href="/products?category=kue" class="nav-link <%= (currentPage === 'kue') ? 'active' : '' %>">
                        <i class="fas fa-birthday-cake mr-1"></i>Kue
                    </a>
                    <a href="/products?category=ramadhan-lebaran" class="nav-link <%= (currentPage === 'ramadhan') ? 'active' : '' %>">
                        <i class="fas fa-moon mr-1"></i>Ramadhan & Lebaran
                    </a>
                    <a href="/marketplace" class="nav-link <%= (currentPage === 'marketplace') ? 'active' : '' %>">
                        <i class="fas fa-store mr-1"></i>Marketplace
                    </a>
                </div>

                <!-- Cart & User -->
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="hidden md:block relative">
                        <input type="text" placeholder="Cari produk..." 
                               class="w-64 px-4 py-2 rounded-full border-0 bg-white/20 text-white placeholder-white/70 focus:bg-white focus:text-gray-800 focus:placeholder-gray-500 transition-all duration-300">
                        <button class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white/70 hover:text-white">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>

                    <!-- Cart -->
                    <a href="/cart" class="relative text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-shopping-cart text-xl"></i>
                        <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                            <span class="absolute -top-2 -right-2 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
                                <%= cartCount %>
                            </span>
                        <% } %>
                    </a>

                    <!-- User Menu -->
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="relative group">
                            <button class="flex items-center space-x-2 text-white hover:text-yellow-200 transition-colors duration-300">
                                <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
                                     alt="Profile" class="w-8 h-8 rounded-full border-2 border-white/30">
                                <span class="hidden md:block"><%= user.name %></span>
                                <i class="fas fa-chevron-down text-sm"></i>
                            </button>
                            
                            <!-- Dropdown Menu -->
                            <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
                                <a href="/profile" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 border-b">
                                    <i class="fas fa-user mr-2"></i>Profile
                                </a>
                                <a href="/orders" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 border-b">
                                    <i class="fas fa-shopping-bag mr-2"></i>Pesanan Saya
                                </a>
                                <a href="/wishlist" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 border-b">
                                    <i class="fas fa-heart mr-2"></i>Wishlist
                                </a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin" class="block px-4 py-3 text-gray-700 hover:bg-gray-100 border-b">
                                        <i class="fas fa-cog mr-2"></i>Admin Panel
                                    </a>
                                <% } %>
                                <a href="/auth/logout" class="block px-4 py-3 text-red-600 hover:bg-red-50">
                                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                                </a>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="btn-secondary">
                            <i class="fas fa-sign-in-alt mr-1"></i>Login
                        </a>
                    <% } %>

                    <!-- Mobile Menu Button -->
                    <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Menu -->
            <div id="mobileMenu" class="md:hidden mt-4 pb-4 hidden">
                <div class="space-y-2">
                    <a href="/" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-home mr-2"></i>Beranda
                    </a>
                    <a href="/products?category=baju-muslimah" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-tshirt mr-2"></i>Baju Muslimah
                    </a>
                    <a href="/products?category=hampers" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-gift mr-2"></i>Hampers
                    </a>
                    <a href="/products?category=kue" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-birthday-cake mr-2"></i>Kue
                    </a>
                    <a href="/products?category=ramadhan-lebaran" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-moon mr-2"></i>Ramadhan & Lebaran
                    </a>
                    <a href="/marketplace" class="block py-2 text-white hover:text-yellow-200 transition-colors duration-300">
                        <i class="fas fa-store mr-2"></i>Marketplace
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Flash Messages -->
    <% if (typeof success !== 'undefined' && success.length > 0) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
            <span class="block sm:inline"><%= success %></span>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mx-4 mt-4" role="alert">
            <span class="block sm:inline"><%= error %></span>
        </div>
    <% } %>

    <!-- Main Content -->
    <main>
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="footer text-white py-12">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-amber-600 rounded-full flex items-center justify-center">
                            <i class="fas fa-shopping-bag text-white text-xl"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold">Maraneea Shop</h3>
                            <p class="text-sm text-gray-300">Baju Muslimah & Hampers Terbaik</p>
                        </div>
                    </div>
                    <p class="text-gray-300 mb-4 max-w-md">
                        Toko online terpercaya untuk baju muslimah, hampers, aneka kue, dan produk Ramadhan & Lebaran. 
                        Kualitas terbaik dengan harga terjangkau untuk semua kebutuhan Anda.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-300">
                            <i class="fab fa-facebook text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-300">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-300">
                            <i class="fab fa-whatsapp text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-300 hover:text-yellow-400 transition-colors duration-300">
                            <i class="fab fa-tiktok text-xl"></i>
                        </a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Menu Cepat</h4>
                    <ul class="space-y-2">
                        <li><a href="/" class="footer-link">Beranda</a></li>
                        <li><a href="/products" class="footer-link">Semua Produk</a></li>
                        <li><a href="/about" class="footer-link">Tentang Kami</a></li>
                        <li><a href="/contact" class="footer-link">Kontak</a></li>
                        <li><a href="/faq" class="footer-link">FAQ</a></li>
                    </ul>
                </div>

                <!-- Categories -->
                <div>
                    <h4 class="text-lg font-semibold mb-4">Kategori</h4>
                    <ul class="space-y-2">
                        <li><a href="/products?category=baju-muslimah" class="footer-link">Baju Muslimah</a></li>
                        <li><a href="/products?category=hampers" class="footer-link">Hampers</a></li>
                        <li><a href="/products?category=kue" class="footer-link">Aneka Kue</a></li>
                        <li><a href="/products?category=ramadhan-lebaran" class="footer-link">Ramadhan & Lebaran</a></li>
                        <li><a href="/products?category=aksesoris" class="footer-link">Aksesoris</a></li>
                    </ul>
                </div>
            </div>

            <div class="border-t border-gray-600 mt-8 pt-8">
                <div class="flex flex-col md:flex-row justify-between items-center">
                    <p class="text-gray-300 text-sm">
                        © {new Date().getFullYear()} Maraneea Shop. All Rights Reserved.
                    </p>
                    <div class="flex space-x-6 mt-4 md:mt-0">
                        <a href="/privacy" class="footer-link text-sm">Kebijakan Privasi</a>
                        <a href="/terms" class="footer-link text-sm">Syarat & Ketentuan</a>
                        <a href="/shipping" class="footer-link text-sm">Info Pengiriman</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Additional JavaScript -->
    <% if (typeof additionalJS !== 'undefined') { %>
        <% additionalJS.forEach(js => { %>
            <script src="<%= js %>"></script>
        <% }); %>
    <% } %>
</body>
</html>
