<%- include('../layout', { 
    title: title,
    description: description,
    currentPage: 'cart',
    additionalCSS: ['/css/cart.css']
}) %>

<!-- Breadcrumb -->
<section class="bg-gray-100 py-4">
    <div class="container mx-auto px-4">
        <nav class="flex items-center space-x-2 text-sm">
            <a href="/" class="text-gray-600 hover:text-amber-600">Beranda</a>
            <i class="fas fa-chevron-right text-gray-400"></i>
            <span class="text-gray-800">Keranjang Belanja</span>
        </nav>
    </div>
</section>

<!-- Cart Section -->
<section class="py-8">
    <div class="container mx-auto px-4">
        <% if (cart.items.length > 0) { %>
            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Cart Items -->
                <div class="lg:w-2/3">
                    <div class="bg-white rounded-lg shadow-md">
                        <div class="p-6 border-b border-gray-200">
                            <h1 class="text-2xl font-bold text-gray-800">Keranjang Belanja</h1>
                            <p class="text-gray-600 mt-1"><%= cartTotal.uniqueItems %> item dalam keranjang</p>
                        </div>

                        <div class="divide-y divide-gray-200">
                            <% cart.items.forEach((item, index) => { %>
                                <div class="p-6 cart-item" data-item-index="<%= index %>">
                                    <div class="flex items-center space-x-4">
                                        <!-- Product Image -->
                                        <div class="flex-shrink-0">
                                            <img src="<%= item.product.images[0]?.url || '/images/placeholder-product.jpg' %>" 
                                                 alt="<%= item.product.name %>" 
                                                 class="w-20 h-20 object-cover rounded-lg">
                                        </div>

                                        <!-- Product Info -->
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-800 mb-1">
                                                <a href="/products/<%= item.product.seo.slug %>" 
                                                   class="hover:text-amber-600 transition-colors duration-300">
                                                    <%= item.product.name %>
                                                </a>
                                            </h3>
                                            
                                            <% if (item.variant && item.variant.name) { %>
                                                <p class="text-sm text-gray-600 mb-2">
                                                    <%= item.variant.name %>: <%= item.variant.value %>
                                                </p>
                                            <% } %>

                                            <div class="flex items-center space-x-4">
                                                <!-- Price -->
                                                <div class="text-lg font-semibold text-green-600">
                                                    Rp <%= item.product.price.toLocaleString('id-ID') %>
                                                </div>

                                                <!-- Stock Status -->
                                                <% if (item.product.stock < item.quantity) { %>
                                                    <span class="text-sm text-red-600">
                                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                                        Stok tidak mencukupi
                                                    </span>
                                                <% } else if (item.product.stock < 10) { %>
                                                    <span class="text-sm text-yellow-600">
                                                        <i class="fas fa-exclamation-circle mr-1"></i>
                                                        Stok terbatas (<%= item.product.stock %> tersisa)
                                                    </span>
                                                <% } %>
                                            </div>
                                        </div>

                                        <!-- Quantity Controls -->
                                        <div class="flex items-center space-x-2">
                                            <button onclick="updateQuantity(<%= index %>, -1)" 
                                                    class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center hover:bg-gray-50 transition-colors duration-300"
                                                    <%= item.quantity <= 1 ? 'disabled' : '' %>>
                                                <i class="fas fa-minus text-sm"></i>
                                            </button>
                                            
                                            <input type="number" 
                                                   value="<%= item.quantity %>" 
                                                   min="1" 
                                                   max="<%= item.product.stock %>"
                                                   class="w-16 text-center border border-gray-300 rounded-md py-1 quantity-input"
                                                   data-product-id="<%= item.product._id %>"
                                                   data-variant='<%= JSON.stringify(item.variant) %>'
                                                   onchange="updateQuantityFromInput(<%= index %>)">
                                            
                                            <button onclick="updateQuantity(<%= index %>, 1)" 
                                                    class="w-8 h-8 rounded-full border border-gray-300 flex items-center justify-center hover:bg-gray-50 transition-colors duration-300"
                                                    <%= item.quantity >= item.product.stock ? 'disabled' : '' %>>
                                                <i class="fas fa-plus text-sm"></i>
                                            </button>
                                        </div>

                                        <!-- Item Total -->
                                        <div class="text-right">
                                            <div class="text-lg font-semibold text-gray-800">
                                                Rp <%= (item.product.price * item.quantity).toLocaleString('id-ID') %>
                                            </div>
                                        </div>

                                        <!-- Remove Button -->
                                        <button onclick="removeItem(<%= index %>)" 
                                                class="text-red-500 hover:text-red-700 transition-colors duration-300"
                                                title="Hapus dari keranjang">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            <% }); %>
                        </div>

                        <!-- Cart Actions -->
                        <div class="p-6 bg-gray-50 flex justify-between items-center">
                            <button onclick="clearCart()" 
                                    class="text-red-600 hover:text-red-700 font-medium transition-colors duration-300">
                                <i class="fas fa-trash mr-2"></i>
                                Hapus Semua
                            </button>
                            
                            <a href="/products" 
                               class="btn-outline">
                                <i class="fas fa-arrow-left mr-2"></i>
                                Lanjut Belanja
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:w-1/3">
                    <div class="bg-white rounded-lg shadow-md p-6 sticky top-24">
                        <h2 class="text-xl font-bold text-gray-800 mb-4">Ringkasan Pesanan</h2>
                        
                        <div class="space-y-3 mb-6">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal (<%= cartTotal.itemCount %> item)</span>
                                <span class="font-semibold">Rp <%= cartTotal.subtotal.toLocaleString('id-ID') %></span>
                            </div>
                            
                            <div class="flex justify-between">
                                <span class="text-gray-600">Ongkos Kirim</span>
                                <span class="font-semibold text-green-600">Gratis</span>
                            </div>
                            
                            <div class="flex justify-between">
                                <span class="text-gray-600">Pajak</span>
                                <span class="font-semibold">Rp 0</span>
                            </div>
                            
                            <div class="border-t border-gray-200 pt-3">
                                <div class="flex justify-between text-lg font-bold">
                                    <span>Total</span>
                                    <span class="text-green-600">Rp <%= cartTotal.subtotal.toLocaleString('id-ID') %></span>
                                </div>
                            </div>
                        </div>

                        <!-- Checkout Button -->
                        <a href="/checkout" class="w-full btn-primary text-center block mb-4">
                            <i class="fas fa-credit-card mr-2"></i>
                            Proses Checkout
                        </a>

                        <!-- Security Info -->
                        <div class="text-center text-sm text-gray-500">
                            <i class="fas fa-lock mr-1"></i>
                            Transaksi aman dan terenkripsi
                        </div>

                        <!-- Payment Methods -->
                        <div class="mt-6">
                            <h3 class="text-sm font-semibold text-gray-700 mb-3">Metode Pembayaran</h3>
                            <div class="flex space-x-2">
                                <div class="w-8 h-6 bg-blue-600 rounded text-white text-xs flex items-center justify-center">
                                    V
                                </div>
                                <div class="w-8 h-6 bg-red-600 rounded text-white text-xs flex items-center justify-center">
                                    M
                                </div>
                                <div class="w-8 h-6 bg-green-600 rounded text-white text-xs flex items-center justify-center">
                                    BCA
                                </div>
                                <div class="w-8 h-6 bg-yellow-600 rounded text-white text-xs flex items-center justify-center">
                                    M
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- Empty Cart -->
            <div class="text-center py-16">
                <div class="w-32 h-32 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-shopping-cart text-gray-400 text-5xl"></i>
                </div>
                
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Keranjang Belanja Kosong</h2>
                <p class="text-gray-600 mb-8 max-w-md mx-auto">
                    Belum ada produk di keranjang belanja Anda. Mulai berbelanja untuk menambahkan produk favorit!
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/products" class="btn-primary">
                        <i class="fas fa-shopping-bag mr-2"></i>
                        Mulai Berbelanja
                    </a>
                    <a href="/products?category=baju-muslimah" class="btn-secondary">
                        <i class="fas fa-tshirt mr-2"></i>
                        Lihat Baju Muslimah
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</section>

<script>
// Update quantity with buttons
async function updateQuantity(index, change) {
    const quantityInput = document.querySelector(`input[data-item-index="${index}"]`);
    const newQuantity = parseInt(quantityInput.value) + change;
    
    if (newQuantity < 1) return;
    
    quantityInput.value = newQuantity;
    await updateCartItem(index, newQuantity);
}

// Update quantity from input
async function updateQuantityFromInput(index) {
    const quantityInput = document.querySelector(`input[data-item-index="${index}"]`);
    const newQuantity = parseInt(quantityInput.value);
    
    if (newQuantity < 1) {
        quantityInput.value = 1;
        return;
    }
    
    await updateCartItem(index, newQuantity);
}

// Update cart item via API
async function updateCartItem(index, quantity) {
    const cartItem = document.querySelector(`[data-item-index="${index}"]`);
    const productId = cartItem.querySelector('.quantity-input').dataset.productId;
    const variant = JSON.parse(cartItem.querySelector('.quantity-input').dataset.variant || 'null');
    
    try {
        const response = await fetch('/cart/update', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                productId: productId,
                quantity: quantity,
                variant: variant
            })
        });

        const result = await response.json();
        
        if (result.success) {
            // Update the item total
            updateItemTotal(index, quantity);
            updateCartSummary(result.cartTotal);
            showNotification('Keranjang berhasil diperbarui', 'success');
        } else {
            showNotification(result.message || 'Gagal memperbarui keranjang', 'error');
            // Revert quantity
            location.reload();
        }
    } catch (error) {
        console.error('Error updating cart:', error);
        showNotification('Terjadi kesalahan. Silakan coba lagi.', 'error');
        location.reload();
    }
}

// Remove item from cart
async function removeItem(index) {
    if (!confirm('Apakah Anda yakin ingin menghapus produk ini dari keranjang?')) {
        return;
    }
    
    const cartItem = document.querySelector(`[data-item-index="${index}"]`);
    const productId = cartItem.querySelector('.quantity-input').dataset.productId;
    const variant = JSON.parse(cartItem.querySelector('.quantity-input').dataset.variant || 'null');
    
    try {
        const response = await fetch('/cart/remove', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                productId: productId,
                variant: variant
            })
        });

        const result = await response.json();
        
        if (result.success) {
            cartItem.remove();
            updateCartSummary(result.cartTotal);
            showNotification('Produk berhasil dihapus dari keranjang', 'success');
            
            // Check if cart is empty
            if (result.cartCount === 0) {
                location.reload();
            }
        } else {
            showNotification(result.message || 'Gagal menghapus produk', 'error');
        }
    } catch (error) {
        console.error('Error removing item:', error);
        showNotification('Terjadi kesalahan. Silakan coba lagi.', 'error');
    }
}

// Clear entire cart
async function clearCart() {
    if (!confirm('Apakah Anda yakin ingin mengosongkan keranjang belanja?')) {
        return;
    }
    
    try {
        const response = await fetch('/cart/clear', {
            method: 'DELETE'
        });

        const result = await response.json();
        
        if (result.success) {
            showNotification('Keranjang berhasil dikosongkan', 'success');
            location.reload();
        } else {
            showNotification(result.message || 'Gagal mengosongkan keranjang', 'error');
        }
    } catch (error) {
        console.error('Error clearing cart:', error);
        showNotification('Terjadi kesalahan. Silakan coba lagi.', 'error');
    }
}

// Update item total display
function updateItemTotal(index, quantity) {
    const cartItem = document.querySelector(`[data-item-index="${index}"]`);
    const priceElement = cartItem.querySelector('.text-lg.font-semibold.text-green-600');
    const price = parseFloat(priceElement.textContent.replace(/[^\d]/g, ''));
    const itemPrice = price / (quantity - 1); // Get original price
    const newTotal = itemPrice * quantity;
    
    priceElement.textContent = `Rp ${newTotal.toLocaleString('id-ID')}`;
}

// Update cart summary
function updateCartSummary(cartTotal) {
    const subtotalElement = document.querySelector('.font-semibold');
    if (subtotalElement) {
        subtotalElement.textContent = `Rp ${cartTotal.subtotal.toLocaleString('id-ID')}`;
    }
    
    const totalElement = document.querySelector('.text-green-600');
    if (totalElement) {
        totalElement.textContent = `Rp ${cartTotal.subtotal.toLocaleString('id-ID')}`;
    }
}
</script>

