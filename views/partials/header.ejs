<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Maraneea Shop - Baju Muslimah, Hampers & Kue Terbaik' %></title>
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'Toko online terpercaya untuk baju muslimah, hampers, aneka kue, dan produk Ramadhan & Lebaran.' %>">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- CSS -->
    <link href="/css/style.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    
    <!-- Additional CSS -->
    <% if (typeof additionalCSS !== 'undefined') { %>
        <% additionalCSS.forEach(css => { %>
            <link href="<%= css %>" rel="stylesheet">
        <% }); %>
    <% } %>
</head>
<body class="min-h-screen flex flex-col bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 transition-colors duration-300">
    
    <!-- ========== LOADING SCREEN ========== -->
    <div id="loadingScreen" class="fixed inset-0 bg-gradient-to-br from-primary-500 via-primary-600 to-accent-600 z-[100] flex items-center justify-center transition-opacity duration-500">
        <div class="text-center">
            <div class="relative">
                <div class="w-20 h-20 border-4 border-white/30 border-t-white rounded-full animate-spin mx-auto mb-4"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                    <i class="fas fa-shopping-bag text-white text-2xl animate-pulse"></i>
                </div>
            </div>
            <h2 class="text-white text-xl font-bold animate-pulse">Maraneea Shop</h2>
            <p class="text-white/80 text-sm mt-2">Memuat...</p>
        </div>
    </div>

    <!-- ========== MODERN NAVBAR ========== -->
    <header id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-gradient-to-r from-primary-500 via-primary-600 to-accent-600 shadow-luxury">
        <nav class="container mx-auto px-4">
            <div class="flex items-center justify-between h-20">
                
                <!-- Logo -->
                <a href="/" class="flex items-center space-x-3 group">
                    <div class="w-12 h-12 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center transform group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-medium">
                        <i class="fas fa-shopping-bag text-white text-xl"></i>
                    </div>
                    <div class="hidden md:block">
                        <h1 class="text-xl font-bold text-white font-grotesk">Maraneea Shop</h1>
                        <p class="text-xs text-accent-200">Premium Collection</p>
                    </div>
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden lg:flex items-center space-x-1">
                    <a href="/" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'home') ? 'active' : '' %>">
                        <i class="fas fa-home mr-2"></i>Beranda
                    </a>
                    <a href="/products?category=baju-muslimah" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'baju-muslimah') ? 'active' : '' %>">
                        <i class="fas fa-tshirt mr-2"></i>Baju Muslimah
                    </a>
                    <a href="/products?category=hampers" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'hampers') ? 'active' : '' %>">
                        <i class="fas fa-gift mr-2"></i>Hampers
                    </a>
                    <a href="/products?category=kue" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'kue') ? 'active' : '' %>">
                        <i class="fas fa-birthday-cake mr-2"></i>Kue
                    </a>
                    <a href="/products?category=ramadhan-lebaran" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'ramadhan') ? 'active' : '' %>">
                        <i class="fas fa-moon mr-2"></i>Ramadhan
                    </a>
                    <a href="/marketplace" class="nav-link-modern <%= (typeof currentPage !== 'undefined' && currentPage === 'marketplace') ? 'active' : '' %>">
                        <i class="fas fa-store mr-2"></i>Marketplace
                    </a>
                </div>

                <!-- Right Side Actions -->
                <div class="flex items-center space-x-3">
                    
                    <!-- Search Bar (Desktop) -->
                    <div class="hidden md:block relative group">
                        <input type="text" 
                               id="searchInput"
                               placeholder="Cari produk..." 
                               class="w-64 pl-10 pr-4 py-2.5 rounded-full border-0 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:bg-white focus:text-neutral-900 focus:placeholder-neutral-500 focus:ring-2 focus:ring-accent-400 transition-all duration-300 focus:w-80">
                        <i class="fas fa-search absolute left-3.5 top-1/2 transform -translate-y-1/2 text-white/60 group-focus-within:text-neutral-500 transition-colors pointer-events-none"></i>
                    </div>

                    <!-- Dark Mode Toggle -->
                    <button onclick="toggleDarkMode()" 
                            class="w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 flex items-center justify-center transition-all duration-300 hover:scale-110">
                        <i class="fas fa-moon text-white dark-mode-icon" id="darkModeIcon"></i>
                    </button>

                    <!-- Cart Icon -->
                    <a href="/cart" class="relative group">
                        <div class="w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 flex items-center justify-center transition-all duration-300 hover:scale-110">
                            <i class="fas fa-shopping-cart text-white text-lg"></i>
                        </div>
                        <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                            <span class="absolute -top-1 -right-1 bg-error-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center font-bold animate-pulse" data-cart-count>
                                <%= cartCount %>
                            </span>
                        <% } %>
                    </a>

                    <!-- User Menu -->
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="relative group hidden md:block">
                            <button class="flex items-center space-x-2 px-3 py-2 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 transition-all duration-300">
                                <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
                                     alt="Profile" 
                                     class="w-8 h-8 rounded-full border-2 border-white/30 object-cover">
                                <span class="text-white text-sm font-medium"><%= user.name || 'User' %></span>
                                <i class="fas fa-chevron-down text-white text-xs"></i>
                            </button>
                            
                            <!-- Dropdown Menu -->
                            <div class="absolute right-0 mt-2 w-56 bg-white dark:bg-neutral-800 rounded-2xl shadow-strong opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 overflow-hidden">
                                <a href="/profile" class="flex items-center px-4 py-3 text-neutral-700 dark:text-neutral-200 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors border-b border-neutral-200 dark:border-neutral-700">
                                    <i class="fas fa-user mr-3 text-primary-500 dark:text-accent-400"></i>
                                    <span>Profil Saya</span>
                                </a>
                                <a href="/profile/orders" class="flex items-center px-4 py-3 text-neutral-700 dark:text-neutral-200 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors border-b border-neutral-200 dark:border-neutral-700">
                                    <i class="fas fa-shopping-bag mr-3 text-primary-500 dark:text-accent-400"></i>
                                    <span>Pesanan Saya</span>
                                </a>
                                <% if (user.role === 'admin') { %>
                                    <a href="/admin" class="flex items-center px-4 py-3 text-neutral-700 dark:text-neutral-200 hover:bg-neutral-100 dark:hover:bg-neutral-700 transition-colors border-b border-neutral-200 dark:border-neutral-700">
                                        <i class="fas fa-cog mr-3 text-primary-500 dark:text-accent-400"></i>
                                        <span>Admin Panel</span>
                                    </a>
                                <% } %>
                                <a href="/auth/logout" class="flex items-center px-4 py-3 text-error-600 dark:text-error-400 hover:bg-error-50 dark:hover:bg-error-900/20 transition-colors">
                                    <i class="fas fa-sign-out-alt mr-3"></i>
                                    <span>Logout</span>
                                </a>
                            </div>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="hidden md:flex items-center px-5 py-2.5 bg-white text-primary-600 rounded-full font-medium hover:bg-accent-100 hover:scale-105 transition-all duration-300 shadow-medium">
                            <i class="fas fa-sign-in-alt mr-2"></i>
                            Login
                        </a>
                    <% } %>

                    <!-- Mobile Menu Button -->
                    <button onclick="toggleMobileMenu()" class="lg:hidden w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm hover:bg-white/20 flex items-center justify-center transition-all duration-300">
                        <i class="fas fa-bars text-white text-lg" id="mobileMenuIcon"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation Menu -->
            <div id="mobileMenu" class="lg:hidden max-h-0 overflow-hidden transition-all duration-300 ease-in-out">
                <div class="py-4 space-y-1">
                    <!-- Mobile Search -->
                    <div class="relative mb-3">
                        <input type="text" 
                               placeholder="Cari produk..." 
                               class="w-full pl-10 pr-4 py-2.5 rounded-full border-0 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:bg-white focus:text-neutral-900 focus:placeholder-neutral-500 transition-all duration-300">
                        <i class="fas fa-search absolute left-3.5 top-1/2 transform -translate-y-1/2 text-white/60"></i>
                    </div>
                    
                    <a href="/" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-home mr-3"></i>Beranda
                    </a>
                    <a href="/products?category=baju-muslimah" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-tshirt mr-3"></i>Baju Muslimah
                    </a>
                    <a href="/products?category=hampers" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-gift mr-3"></i>Hampers
                    </a>
                    <a href="/products?category=kue" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-birthday-cake mr-3"></i>Kue
                    </a>
                    <a href="/products?category=ramadhan-lebaran" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-moon mr-3"></i>Ramadhan & Lebaran
                    </a>
                    <a href="/marketplace" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                        <i class="fas fa-store mr-3"></i>Marketplace
                    </a>
                    
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="border-t border-white/20 mt-3 pt-3">
                            <a href="/profile" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                                <i class="fas fa-user mr-3"></i>Profil
                            </a>
                            <a href="/profile/orders" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                                <i class="fas fa-shopping-bag mr-3"></i>Pesanan
                            </a>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin" class="block py-3 px-4 text-white hover:bg-white/10 rounded-xl transition-colors duration-300">
                                    <i class="fas fa-cog mr-3"></i>Admin
                                </a>
                            <% } %>
                            <a href="/auth/logout" class="block py-3 px-4 text-error-400 hover:bg-error-500/20 rounded-xl transition-colors duration-300">
                                <i class="fas fa-sign-out-alt mr-3"></i>Logout
                            </a>
                        </div>
                    <% } else { %>
                        <a href="/auth/login" class="block py-3 px-4 mt-3 bg-white text-primary-600 rounded-xl text-center font-medium hover:bg-accent-100 transition-colors duration-300">
                            <i class="fas fa-sign-in-alt mr-2"></i>Login
                        </a>
                    <% } %>
                </div>
            </div>
        </nav>
    </header>

    <!-- ========== FLASH MESSAGES (Toast Style) ========== -->
    <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
        <div class="toast-success animate-slide-left" role="alert">
            <div class="flex items-center">
                <i class="fas fa-check-circle text-2xl mr-3"></i>
                <span><%= success %></span>
            </div>
        </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
        <div class="toast-error animate-slide-left" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-2xl mr-3"></i>
                <span><%= error %></span>
            </div>
        </div>
    <% } %>

    <!-- Main Content Wrapper -->
    <main class="flex-1">
